<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>price_validation_check</fullName>
    <active>true</active>
    <errorConditionFormula>book_price__c  &lt; 1000</errorConditionFormula>
    <errorDisplayField>book_price__c</errorDisplayField>
    <errorMessage>Price should be greater than 1000.</errorMessage>
</ValidationRule>
